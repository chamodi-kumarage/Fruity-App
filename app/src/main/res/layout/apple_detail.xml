<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btnStar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/btnBell"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bell_icon" />
    </LinearLayout>

    <!-- Hero image -->

    <!-- White content card -->
    <ImageView
        android:id="@+id/imgFruit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:contentDescription="apple"
        android:scaleType="centerInside"
        android:src="@drawable/apple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="16dp">

        <!-- Title & Qty -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apple"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/btnMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/plus_icon" />

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="1 Kg"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_qty_circle" />
            </LinearLayout>
        </LinearLayout>

        <!-- Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fruits"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Rating + reviews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/five_stars" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="(89 reviews)"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Price link -->
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="RS.12.00/100g"
            android:textColor="#43A047" />

        <!-- Description title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Descriptions"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- Description body -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2dp"
            android:text="Apple Paradise works with trusted tropical farms to bring you ripe, golden papayas. Papayas are easy to find in the fresh section â€” soft, sweet, and sometimes a bit spotted on the outside, but bursting with flavor inside."
            android:textColor="@color/text_secondary" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bg_button_white_green"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Add to Cart"
                    android:textColor="#43A047"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_green"
                android:backgroundTint="#7CB342"
                android:gravity="center"
                android:text="Buy Now"
                android:textColor="@color/colorOnSecondary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom nav (your shared include) -->
    <include layout="@layout/include_bottom_menu" />
</LinearLayout>
