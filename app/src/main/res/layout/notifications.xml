<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Notifications"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/btnBell"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bell_icon"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Category chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:minWidth="88dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="All"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip_selected" />

            <TextView
                android:id="@+id/chipOrders"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:minWidth="88dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Orders"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/chipOffers"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:minWidth="88dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Offers"
                android:textColor="@color/black"
                android:background="@drawable/bg_chip" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable list of notifications -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Notification card: Order on the way -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_notification_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iconDelivery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/delivery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconDelivery"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your order is on the way"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Track your rider in real time from the Track Order screen."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="5m"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/time1"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_unread_badge" />
            </RelativeLayout>

            <!-- Notification card: Payment received -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_notification_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iconPay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/payment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconPay"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment received"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Rs. 1,257.00 for Order H1254 has been confirmed."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="30m"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </RelativeLayout>

            <!-- Notification card: Special offer -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_notification_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iconOffer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/top_banner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconOffer"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flash Sale – 20% off today"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Use code FRUITIE20 at checkout. T&amp;Cs apply."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="1h"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </RelativeLayout>

            <!-- Notification card: Order delivered -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_notification_card"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/iconStar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/star" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconStar"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivered! Rate your order"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Tap to share your feedback and help us improve."
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Yesterday"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav include -->
    <include layout="@layout/include_bottom_menu" />
</LinearLayout>
