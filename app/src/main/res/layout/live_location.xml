<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Live Location"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnStar"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/btnBell"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bell_icon" />
    </LinearLayout>

    <!-- Scrollable content (keeps bottom bar clickable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Illustration -->

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Allow “App” to use your location?"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#0B0B0B"
                android:gravity="center" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Your precise location is used to show your position on the map, get directions, estimate travel times and improve search results."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center" />

            <!-- Actions -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:src="@drawable/loc1" />

            <TextView
                android:id="@+id/btnAllowOnce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="Allow at once"
                android:textColor="#1E88E5"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnAllowWhileUsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow while using this app"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/btnDontAllow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't Allow"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav (shared include) -->
    <include layout="@layout/include_bottom_menu" />
</LinearLayout>
