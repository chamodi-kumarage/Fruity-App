<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/back_arrow"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Privacy Policy"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/btnBell"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/bell_icon"
            app:tint="@color/black" />
    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="24dp">

            <!-- App / Updated -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FRUITIE – Privacy Policy"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: 05 Aug 2025"
                android:textSize="12sp"
                android:textColor="#7A7A7A" />

            <!-- Intro -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:paddingTop="12dp"
                android:text="We respect your privacy. This policy explains what information we collect when you use the FRUITIE app, how we use it, and the choices you have."
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: Information we collect -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information We Collect"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="• Account details (name, email, phone)\n• Order &amp; payment details (order items, totals, non-sensitive payment status)\n• Device &amp; usage data (app version, crash logs)\n• Location data for delivery/track-order features (only with your permission)"
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: How we use -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How We Use Your Information"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="• Process orders and deliver products\n• Provide customer support and notifications\n• Improve app performance and features\n• Show relevant offers and updates"
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: Sharing -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sharing and Disclosure"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="We do not sell your personal data. We may share it with:\n• Service providers (delivery partners, analytics, crash reporting) who process data on our behalf\n• Authorities if required by law"
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: Your choices -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Choices and Rights"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="• Update your profile details in the app\n• Control notifications in Settings\n• Enable/disable location permissions at any time\n• Request to access or delete your data by contacting us"
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: Data retention & security -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Retention and Security"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="We keep your information only as long as necessary for the purposes described above and take reasonable measures to protect it. No method of transmission or storage is 100% secure."
                android:textColor="#5C5C5C"
                android:textSize="14sp" />

            <!-- Section: Contact -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingTop="16dp"
                android:paddingBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:lineSpacingExtra="2dp"
                android:text="If you have any questions, email us at support@fruitie.app"
                android:textColor="#5C5C5C"
                android:textSize="14sp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav include -->
    <include layout="@layout/include_bottom_menu" />
</LinearLayout>
